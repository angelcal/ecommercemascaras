@model Ecommerce.Models.Paqueteria
@using Ecommerce.Models

@{
    ViewBag.Title = "Paquete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Enviar Paquete</h2>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">

        

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Nombre de la Paqueteria" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.orden_paq, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.orden_paq, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Orden de envio de la paqueteria" } })
                    @Html.ValidationMessageFor(model => model.orden_paq, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-1"></div>
</div>

