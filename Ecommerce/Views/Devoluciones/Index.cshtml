@model Ecommerce.Models.Devoluciones

@{
    ViewBag.Title = "Devolucion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var items = ViewBag.producto;

}

<h2>Devolucion de producto</h2>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">

        @foreach (var item in items)
        {
            <p><strong>Producto: </strong>@item.Nombre </p>

        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.motivo, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.motivo, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Motivo" } })
                    @Html.ValidationMessageFor(model => model.motivo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Devolver" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-1"></div>
</div>