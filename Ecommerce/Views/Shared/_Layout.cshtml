<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet" />

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Estilos/css/animate.css" />
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Estilos/css/icomoon.css" />
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Estilos/css/bootstrap.css" />

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Estilos/css/magnific-popup.css" />

    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Estilos/css/flexslider.css" />

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/Estilos/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Estilos/css/owl.theme.default.min.css" />

    <!-- Date Picker -->
    <link rel="stylesheet" href="~/Estilos/css/bootstrap-datepicker.css" />
    <!-- Flaticons  -->
    <link rel="stylesheet" href="~/Estilos/fonts/flaticon/font/flaticon.css" />

    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Estilos/css/style.css" />

    <!-- Modernizr JS -->
    <script src="~/Estilos/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="colorlib-nav navbar-static-top" role="navigation">
        <div class="top-menu">
            <div class="container">
                <div class="row">
                    <div class="col-xs-2">
                        <div id="colorlib-logo"><a href="index.html">Mascaras de carnaval</a></div>
                    </div>
                    <div class="col-xs-10 text-center menu-1">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <!-- <li>@Html.ActionLink("Productos", "Productos", "Productos")</li> -->
                            <li>@Html.ActionLink("Productos", "Tienda", "Home")</li>
                            <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                            @{
                                if (Request.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("Historial de Compras", "Historial", "Manage")</li>
                                }
                            }
                            <li>
                                <a href="/Carrito" class="btn btn-default">
                                <i class="icon-shopping-cart"></i> $ 0.00
                                </a>
                            </li>

                            

                        </ul>
                    </div>
                    <div class="col-xs-10 text-right menu-1">
                        <ul>
                            <li>@Html.Partial("_LoginPartial")</li>
                            
                        </ul>
                    </div>
                </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>

    <footer >
        <p>&copy; @DateTime.Now.Year - Mascaras de carnaval</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <!-- jQuery -->
    <script src="~/Estilos/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Estilos/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Estilos/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Estilos/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/Estilos/js/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="~/Estilos/js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/Estilos/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Estilos/js/magnific-popup-options.js"></script>
    <!-- Date Picker -->
    <script src="~/Estilos/js/bootstrap-datepicker.js"></script>
    <!-- Stellar Parallax -->
    <script src="~/Estilos/js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="~/Estilos/js/main.js"></script>

    <script>
        $(document).ready(function () {

            var quantitiy = 0;
            $('.quantity-right-plus').click(function (e) {

                // Stop acting like a button
                e.preventDefault();
                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                $('#quantity').val(quantity + 1);


                // Increment

            });

            $('.quantity-left-minus').click(function (e) {
                // Stop acting like a button
                e.preventDefault();
                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                // Increment
                if (quantity > 0) {
                    $('#quantity').val(quantity - 1);
                }
            });

        });
    </script>

</body>
</html>
