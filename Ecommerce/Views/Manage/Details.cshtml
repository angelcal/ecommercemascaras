@model IEnumerable<Ecommerce.Models.DetalleVenta>



@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var detalleCompra = ViewBag.detalleCompra;
    var items = ViewBag.compra;
}



<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h2 style="color:#000000">Detalles de la compra</h2>
        @foreach (var item in items)
        {
            <p><strong>Compra: </strong>@item.Id </p>
            <p><strong>Fecha de la compra: </strong>@item.FechaVenta</p>
        }

            @*@<div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-circle" style="color: #1bbf06"></i>Recuerda que tienes 10 dias para devolver el producto desde el dia que lo recibiste,
                ya sea porque el producto es distinto de lo que pediste o porque tiene algún problema.
            </div>*@
            <table class="table" style="margin-bottom:30px;margin-top:30px;">
                <tr style="background-color: #F7F7F7" class="text-center">
                    <th style="width:17%">
                        Nombre del Producto
                    </th>
                    <th style="width:20%">
                        Descripcion
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Precio Unitario
                    </th>
                    <th>
                        Descuento
                    </th>
                    <th>
                        Subtotal
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var detalle in detalleCompra)
                {


                    <tr style="background-color: #FFFFFF" class="text-center">
                        <td>
                            @detalle.detailProducto.Nombre
                        </td>
                        <td style="width:20%">
                            @detalle.detailProducto.Descripcion
                        </td>
                        <td>
                            @detalle.detailVenta.Cantidad
                        </td>
                        <td>
                            @detalle.detailProducto.Precio_final
                        </td>
                        <td>
                            @detalle.detailVenta.Porcentaje_Descuento %
                        </td>
                        <td>
                            $ @detalle.detailVenta.Subtotal
                        </td>
                        <td>
                            @*   @Html.ActionLink("Devolver", "Index", "Devoluciones", new { id = detalle.detailProducto.Id }, new { @class = "btn btn-success" })*@

                        </td>
                    </tr>
                }
            </table>
        </div>
    <div class="col-md-1"></div>
</div>
